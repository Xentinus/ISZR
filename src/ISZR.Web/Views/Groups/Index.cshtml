@model IEnumerable<ISZR.Web.Models.Group>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Jogosultsági csoportok karbantartása";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info d-print-none">
                    <h3 class="card-title"><a asp-action="Create"><input type="button" value="Új jogosultsági csoport létrehozása" class="btn btn-light" /></a></h3>
                </div>
                <div class="card-body p-0">
                    @foreach (var item in Model)
                    {
                        <div class="modal fade" id="deleteModal@(item.GroupId)" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel@(item.GroupId)" aria-hidden="true">
                            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header bg-danger">
                                        <h5 class="modal-title" id="deleteModalLabel@(item.GroupId)"><i class="fas fa-archive mr-2"></i>Archiválási állapot megváltoztatása</h5>
                                    </div>
                                    <div class="modal-body">
                                        <div>Biztosan szeretnéd <b>@item.Name</b> nevű csoport archiválási állapotát megváltoztatni?</div>
                                        <br />
                                        <div class="text-danger font-weight-bold">FIGYELEM!</div>
                                        <div class="text-muted">Archivált csoportot a felhasználók már nem tudnak igényelni!</div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-sign-out-alt mr-2"></i>Vissza</button>
                                        <form asp-action="Index" asp-route-id="@item.GroupId">
                                            <input type="hidden" asp-for="@item.GroupId" />
                                            <button type="submit" class="btn btn-danger"><i class="fas fa-archive mr-2"></i>Megváltoztatás</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <table class="table table-striped">
                        <thead class="bg-info">
                            <tr>
                                <th>Csoport megnevezése</th>
                                <th>Alapértelmezett jogosultságok</th>
                                <th class="d-print-none"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span>@item.Name</span>
                                        <br />
                                        @if (item.IsArchived)
                                        {
                                            <span class="badge badge-danger"><i class="icon fas fa-archive mr-2"></i>Archivált jogosultság csoport</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success"><i class="icon fas fa-puzzle-piece mr-2"></i>Igényelhető jogosultsági csoport</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.WindowsPermissions == null || item.WindowsPermissions == "")
                                        {
                                            <span class="badge badge-danger"><i class="icon fas fa-exclamation mr-2"></i>Windows jogosultságot nem tartalmaz</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success"><i class="icon fas fa-check mr-2"></i>Windows jogosultságot tartalmaz</span>
                                        }
                                        <br />
                                        @if (item.FonixPermissions == null || item.FonixPermissions == "")
                                        {
                                            <span class="badge badge-danger"><i class="icon fas fa-exclamation mr-2"></i>Főnix 3 jogosultságot nem tartalmaz</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success"><i class="icon fas fa-check mr-2"></i>Főnix 3 jogosultságot tartalmaz</span>
                                        }
                                    </td>
                                    <td class="float-right d-print-none">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                <i class="fas fa-book mr-2"></i>Adminisztratív müveletek
                                            </button>
                                            <div class="dropdown-menu">
                                                <a asp-action="Details" asp-route-id="@item.GroupId" class="dropdown-item"><i class="fas fa-search mr-2"></i>Megtekintés</a>
                                                <a asp-action="Edit" asp-route-id="@item.GroupId" class="dropdown-item"><i class="fas fa-edit mr-2"></i>Szerkesztés</a>
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item bg-danger text-white" href="#" data-toggle="modal" data-target="#deleteModal@(item.GroupId)"><i class="fas fa-archive mr-2"></i>Archiválás</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

