@model ErrorViewModel
@{
    ViewData["Title"] = "Hiba történt";
}

<section class="content">
    <div class="error-page">
        <h2 class="headline text-danger">500</h2>
        <div class="error-content">
            <h3 class="mb-3"><i class="icon fas fa-exclamation-triangle text-danger mr-2"></i>Hiba történt</h3>
            <p><a class="btn btn-danger btn-block" href="mailto: bela.kellner@icloud.com"><i class="icon fas fa-envelope mr-2"></i>Hibabejelentés küldése</a></p>
            @if (Model.ShowRequestId)
            {
                <p>
                    <strong>Hiba azonosító:</strong> <code>@Model.RequestId</code>
                </p>
            }
        </div>
    </div>

</section>
