                                            <option>Yugo</option>
                                        </select>
									</div>
								</div>
							</div>
							<div class="col-12 col-md-6">
								<div class="form-group">
									<label>Jármű modellje</label><span class="text-danger font-weight-bold ml-1">*</span>
									<span asp-validation-for="Modell" class="text-danger"></span>
									<div class="input-group mb-3">
										<div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-car-side"></i></span>
										</div>
										<input type="text" asp-for="Modell" class="form-control" placeholder="Modell megnevezése" spellcheck="false" required>
									</div>
								</div>
							</div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>Rendszám</label><span class="text-danger font-weight-bold ml-1">*</span>
                                    <span asp-validation-for="LicensePlate" class="text-danger"></span>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-parking"></i></span>
                                        </div>
                                        <input type="text" asp-for="LicensePlate" class="form-control" placeholder="Jármű rendszáma" spellcheck="false" onkeyup="this.value = this.value.toUpperCase();" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>Tulajdonos</label><span class="text-danger font-weight-bold ml-1">*</span>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        </div>
                                        <select asp-for="OwnerUserId" asp-items="ViewBag.OwnerUserId" class="form-control select2bs4" required>
                                        </select>
                                    </div>
                                </div>
                            </div>
						</div>
						<div class="row">
							<div class="col-12">
								<div class="float-left">
									<div class="custom-control custom-checkbox">
										<input class="custom-control-input" type="checkbox" id="agreeToTerms" name="agreeToTerms" required>
										<label class="custom-control-label" for="agreeToTerms">
											Minden kötelező mezőt (<span class="text-danger font-weight-bold">*</span>) kitöltöttem, és a megadott adatok helyesek.
										</label>
									</div>
								</div>
								<div class="float-right">
									<a asp-action="Index" class="btn btn-secondary"><i class="icon fas fa-sign-out-alt mr-2"></i>Vissza</a>
									<input type="submit" value="Parkolási engedély létrehozása" class="btn btn-success ml-1" />
