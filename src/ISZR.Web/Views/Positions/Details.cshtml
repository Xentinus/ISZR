@model ISZR.Web.Models.Position

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Beosztás részletei";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Beosztáshoz tartozó adatok megtekintése</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                    </div>
					<div class="row">
						<div class="col-12">
							<div class="form-group">
								<label>Beosztás megnevezése</label>
								<span asp-validation-for="Name" class="text-danger"></span>
								<div class="input-group mb-3">
									<div class="input-group-prepend">
										<span class="input-group-text"><i class="fas fa-people-arrows"></i></span>
									</div>
									<input type="text" asp-for="Name" class="form-control" placeholder="Beosztás megnevezése" spellcheck="true" disabled="disabled">
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-12 float-right">
							<span class="float-right">
								<a asp-action="Index" class="btn btn-secondary"><i class="fas fa-sign-out-alt"></i> Vissza</a>
								<a asp-action="Edit" asp-route-id="@Model?.PositionId"><input type="button" value="Beosztás szerkesztése" class="btn btn-info ml-1" /></a>
							</span>
						</div>
					</div>
                </div>
            </div>
        </div>
    </div>
</div>
