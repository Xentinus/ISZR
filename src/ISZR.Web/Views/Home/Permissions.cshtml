@model IEnumerable<ISZR.Web.Models.Permission>
@using ISZR.Web.Components;

@{
    ViewData["Title"] = "Igényelhető jogosultságok";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <form asp-controller="Home" asp-action="Permissions" method="get">
                <div class="card card-info d-print-none">
                    <div class="card-header" data-card-widget="collapse">
                        <h3 class="card-title font-weight-bold"><i class="fas fa-filter mr-2"></i>Jogosultságok szűrése</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6 col-12">
                                <div class="form-group">
                                    <label>Név alapján</label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-font"></i></span>
                                        </div>
                                        <input type="text" class="form-control" name="name" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-12">
                                <div class="form-group">
                                    <label>Típus alapján</label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                        </div>
                                        <select name="type" class="form-control select2bs4">
                                            <option>Mind</option>
                                            <option>Windows jogosultság</option>
                                            <option>Főnix 3 jogosultság</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer d-print-none">
                        <span class="float-right">
                            <a class="btn btn-default ml-1 mr-1" onclick="window.print()"><i class="icon fas fa-print mr-2"></i>Lista nyomtatása</a>
                            <button type="submit" alt="Megjelenített jogosultságok szűrése" class="btn btn-info">Szűrés</button>
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body p-0">
                    <table class="table table-striped">
                        <thead class="bg-info">
                            <tr>
                                <th>Név</th>
                                <th>Leírás</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)<br />
                                        @if (item.Type == "Windows")
                                        {
                                            <span class="text-info font-weight-bold"><i class="icon fab fa-windows mr-2"></i>Windows jogosultság</span>
                                        }
                                        @if (item.Type == "Főnix 3")
                                        {
                                            <span class="text-warning font-weight-bold"><i class="icon fas fa-dove mr-2"></i>Főnix 3 jogosultság</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                        @if (item.ActiveDirectoryPermissions != null)
                                        {
                                            <br />
                                            <abbr class="text-muted initialism" title="Igénylésen szereplő jogosultsági kód">@item.ActiveDirectoryPermissions</abbr>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
