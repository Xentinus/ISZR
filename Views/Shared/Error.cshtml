@model ErrorViewModel
@{
    ViewData["Title"] = "Hiba történt";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Hiba történt</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="error-page">
        <h2 class="headline text-danger">500</h2>
        <div class="error-content">
            <h3><i class="fas fa-exclamation-triangle text-danger"></i> Hiba történt az alkalmazás futtatása közben...</h3>
            <p><a class="btn btn-danger btn-block btn-sm" href="mailto: bela.kellner@icloud.com"><i class="fas fa-envelope"></i> Hiba bejelentés küldése</a></p>
            @if (Model.ShowRequestId)
            {
                <p>
                    <strong>Hiba azonosító:</strong> <code>@Model.RequestId</code>
                </p>
            }
        </div>
    </div>

</section>
