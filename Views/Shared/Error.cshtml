@model ErrorViewModel
@{
    Layout = "~/Views/Shared/_FullPageLayout.cshtml";
    ViewData["Title"] = "Hiba történt";
}

<section class="content">
    <div class="error-page">
        <h2 class="headline text-danger">500</h2>
        <div class="error-content">
            <h3><i class="fas fa-exclamation-triangle text-danger"></i> Hiba történt az alkalmazás futtatása közben...</h3>
            <p><a class="btn btn-danger btn-block btn-sm" href="mailto: bela.kellner@icloud.com"><i class="fas fa-envelope"></i> Hibabejelentés küldése</a></p>
            <p><a class="btn btn-info btn-block btn-sm" asp-area="" asp-controller="Welcome" asp-action="Index"><i class="fas fa-undo-alt"></i> Alkalmazás újraindítása</a></p>
            @if (Model.ShowRequestId)
            {
                <p>
                    <strong>Hiba azonosító:</strong> <code>@Model.RequestId</code>
                </p>
            }
        </div>
    </div>

</section>
