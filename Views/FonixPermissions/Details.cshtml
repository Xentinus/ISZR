@model ISZR.Models.FonixPermission

@{
    ViewData["Title"] = "Főnix 3 jogosultság részletei";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Főnix 3 jogosultság részletei</h1>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Jogosultsághoz tartozó adatok megtekintése</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label>Jogosltság megnevezése</label>
                                <p>@Html.DisplayFor(model => model.Name)</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label>Jogosultság leírása</label>
                                <p>@Html.DisplayFor(model => model.Description)</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label for="countryView">Rendelkezik országos megtekintővel?</label>
                                <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                    <input asp-for="CountryView" type="checkbox" class="custom-control-input" id="countryView" disabled>
                                    <label class="custom-control-label" for="countryView"></label>
                                </div>
                                <span asp-validation-for="CountryView" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label for="view">Rendelkezik intézeti megtekintővel?</label>
                                <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                    <input asp-for="View" type="checkbox" class="custom-control-input" id="view" disabled>
                                    <label class="custom-control-label" for="view"></label>
                                </div>
                                <span asp-validation-for="View" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label for="edit">Rendelkezik intézeti szerkesztővel?</label>
                                <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                    <input asp-for="Edit" type="checkbox" class="custom-control-input" id="edit" disabled>
                                    <label class="custom-control-label" for="edit"></label>
                                </div>
                                <span asp-validation-for="Edit" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <a asp-action="Edit" asp-route-id="@Model?.FonixPermissionId"><input type="button" value="Szerkesztés" class="btn btn-warning" /></a>
                    <a asp-action="Index"><input type="button" value="Vissza a listához" class="btn btn-info" /></a>
                </div>

            </div>
        </div>
    </div>
</div>
