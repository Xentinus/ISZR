@model ISZR.Models.WindowsPermission

@{
    ViewData["Title"] = "Windows jogosultság szerkesztése";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Windows jogosultság szerkesztése</h1>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card card-warning">
                <div class="card-header">
                    <h3 class="card-title">Windows jogosultsághoz tartozó adatok szerkesztése</h3>
                </div>

                <div class="card-body">
                    <form asp-action="Edit">
                        <div class="row">
                            <div class="col-12">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Jogosultsági csoport megnevezése</label>
                                    <input asp-for="Name" type="text" class="form-control" placeholder="Név..." spellcheck="true">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Jogosultsági csoport leírása</label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Leírás..." spellcheck="true"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Hozzá tartozó Active Directory jogosultságok</label>
                                    <textarea asp-for="Permission" class="form-control" rows="3" placeholder="SKFB-INFO; SKFB-INFO-INFORMATIKA" spellcheck="false"></textarea>
                                    <span asp-validation-for="Permission" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <input type="submit" value="Mentés" class="btn btn-warning" />
                        <a asp-action="Index"><input type="button" value="Vissza a listához" class="btn btn-info" /></a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
