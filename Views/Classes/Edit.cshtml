@model ISZR.Models.Class

@{
    ViewData["Title"] = "Osztály szerkesztése";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Osztály szerkesztése</h1>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card card-warning">
                <div class="card-header">
                    <h3 class="card-title">Osztályhoz tartozó adatok szerkesztése</h3>
                </div>

                <div class="card-body">
                    <form asp-action="Edit">
                        <div class="row">
                            <div class="col-12">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Osztály megnevezése</label>
                                    <input asp-for="Name" type="text" class="form-control" placeholder="Név..." spellcheck="true">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Osztályvezető neve</label>
                                    <input asp-for="LeaderName" type="text" class="form-control" placeholder="Név..." spellcheck="true">
                                    <span asp-validation-for="LeaderName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">

                                <div class="form-group">
                                    <label>Osztályvezető rendfokozata</label>
                                    <select asp-for="LeaderRank" class="form-control">
                                        <option>Munkavállaló</option>
                                        <option>Rendvédelmi-alkalmazott</option>
                                        <option>Őrmester</option>
                                        <option>Törzsörmester</option>
                                        <option>Főtörzsörmester</option>
                                        <option>Zászlós</option>
                                        <option>Törzszászlós</option>
                                        <option>Főtörzszászlós</option>
                                        <option>Hadnagy</option>
                                        <option>Főhadnagy</option>
                                        <option>Százados</option>
                                        <option>Őrnagy</option>
                                        <option>Alezredes</option>
                                        <option>Ezredes</option>
                                        <option>Dandártábornok</option>
                                        <option>Vezérőrnagy</option>
                                        <option>Altábornagy</option>
                                    </select>
                                    <span asp-validation-for="LeaderRank" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <input type="submit" value="Mentés" class="btn btn-warning" />
                        <a asp-action="Index"><input type="button" value="Vissza a listához" class="btn btn-info" /></a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
