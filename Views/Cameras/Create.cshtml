@model ISZR.Models.Camera

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Új intézeti kamera hozzáadása";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Intézeti kamerához tartozó adatok beállítása</h3>
                </div>

                <div class="card-body">
                    <form asp-action="Create">
                        <div class="row">
                            <div class="col-12">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Kamera megnevezése</label>
                                    <input asp-for="Name" type="text" class="form-control" placeholder="Név..." spellcheck="false">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Kamera típusa</label>
                                    <select asp-for="Type" class="form-control">
                                        <option>Beltéri csőkamera</option>
                                        <option>Beltéri dómkamera</option>
                                        <option>Beltéri PTZ kamera</option>
                                        <option>Kültéri csőkamera</option>
                                        <option>Kültéri dómkamera</option>
                                        <option>Kültéri PTZ kamera</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Szektor megnevezése</label>
                                    <input asp-for="Location" type="text" class="form-control" placeholder="Név..." spellcheck="true">
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <input type="submit" value="Hozzáadás" class="btn btn-info" />
                        <a asp-action="Index"><input type="button" value="Vissza a listához" class="btn btn-danger" /></a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
