@model ISZR.Models.Camera

@{
    ViewData["Title"] = "Intézeti kamera szerksztése";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Intézeti kamera szerkesztése</h1>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card card-warning">
                <div class="card-header">
                    <h3 class="card-title">Intézeti kamerához tartozó adatok szerkesztése</h3>
                </div>

                <div class="card-body">
                    <form asp-action="Edit">
                        <div class="row">
                            <div class="col-12">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="CameraId" />
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Kamera megnevezése</label>
                                    <input asp-for="Name" type="text" class="form-control" placeholder="Név..." spellcheck="false">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Kamera típusa</label>
                                    <select asp-for="Type" class="form-control">
                                        <option>Beltéri csőkamera</option>
                                        <option>Beltéri dómkamera</option>
                                        <option>Beltéri PTZ kamera</option>
                                        <option>Kültéri csőkamera</option>
                                        <option>Kültéri dómkamera</option>
                                        <option>Kültéri PTZ kamera</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Szektor megnevezése</label>
                                    <input asp-for="Sector" type="text" class="form-control" placeholder="Név..." spellcheck="true">
                                    <span asp-validation-for="Sector" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <input type="submit" value="Mentés" class="btn btn-warning" />
                        <a asp-action="Index"><input type="button" value="Vissza a listához" class="btn btn-info" /></a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
