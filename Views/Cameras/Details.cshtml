@model ISZR.Models.Camera

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Intézeti kamera részletei";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Intézeti kamerához tartozó adatok megtekintése</h3>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label>Kamera megnevezése</label>
                                <p>@Html.DisplayFor(model => model.Name)</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label>Kamera típusa</label>
                                <p>@Html.DisplayFor(model => model.Type)</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">

                            <div class="form-group">
                                <label>Szektor megnevezése</label>
                                <p>@Html.DisplayFor(model => model.Location)</p>
                            </div>
                        </div>
                    </div>
                    <a asp-action="Edit" asp-route-id="@Model?.CameraId"><input type="button" value="Szerkesztés" class="btn btn-warning" /></a>
                    <a asp-action="Index"><input type="button" value="Vissza a listához" class="btn btn-info" /></a>
                </div>

            </div>
        </div>
    </div>
</div>
